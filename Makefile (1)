# Change the "appname" on the next line to the name you wish to name it
TARGET ?= appname 

# The /build directory is automatically generated and contains the 
# executable after the makefile is done.
BUILD_DIR ?= ./build

# This makefile will automatically parse the ./src directory for .c and
# .cpp files.  If there are subdirectories, they will be parsed as well.
SRC_DIRS ?= ./src
INC_OTHER ?= ./include

SRCS := $(shell find $(SRC_DIRS) -name *.cpp -or -name *.c)
OBJS := $(SRCS:%=$(BUILD_DIR)/%.o)
DEPS := $(OBJS:.o=.d)

INC_DIRS := $(shell find $(INC_OTHER) -type d)
INC_FLAGS := $(addprefix -I,$(INC_DIRS))

INCL_DIRS := $(shell find $(SRC_DIRS) -type d)
INCL_FLAGS := $(addprefix -I,$(INCL_DIRS))
 
# If you need libraries, you can add them to the LIBS= line that is 
# uncommented. If you need to use pthreads, you must use the -lpthread
# and -lrt in that order at the end of the LIBS declaration. IF not 
# done in this order, the pthreead library will not liink properly.
#LIBS=-lm -ldl -lpthread -lrt
LIBS=

CPPFLAGS ?= $(INC_FLAGS) -MMD -MP --std=c++14
CCFLAGS ?= $(INC_FLAGS) -MMD -MP

$(BUILD_DIR)/$(TARGET): $(OBJS)
	$(CXX) $(OBJS) -o $@ $(LIBS) 


# c source
$(BUILD_DIR)/%.c.o: %.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CCFLAGS) $(CFLAGS) -c $< -o $@

# c++ source
$(BUILD_DIR)/%.cpp.o: %.cpp
	$(MKDIR_P) $(dir $@)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@


.PHONY: clean

clean:
	$(RM) -r $(BUILD_DIR)

-include $(DEPS)

MKDIR_P ?= mkdir -p
